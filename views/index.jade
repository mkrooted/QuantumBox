    <div class="container">
    <div class="jumbotron">
    <h2>Welcome on index of QuantumBox control panel!</h2>
    </div>
    <div class="panel panel-default">
    <div class="panel-heading">Active devices</div>
    if devices && devices.length>0
        <div class="table">
        table.table.table-striped
            tr
                td= 'Name'
                td= 'MAC'
                td= 'IP'
                td= 'Model'
                td
            each device in devices
                tr
                    td= device.dev_name
                    td= device.dev_mac
                    td= device.dev_last_ip
                    td= device.dev_uid
                    td
                        a.btn.btn-primary(href="/edit-device/"+device.dev_id)= 'Edit'
                        a.btn.btn-danger(href="/delete-device/"+device.dev_id)= 'Delete'
        </div>
    else
        div.no-devices
            h3= 'No devices'
    </div>
    </div>
