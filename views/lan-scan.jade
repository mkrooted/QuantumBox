    <div class="container">
    <div class="panel panel-default">
    <div class="panel-heading">
    a.btn.btn-primary(href="/lan-scan")= 'Refresh'
    </div>
    <div class="table">
    if devices && typeof devices[0] === 'object'
        table.table.table-striped
            tr
                td= 'Physical Address'
                td= 'Network Address'
                td= 'Manufacturer'
                td
            each device in devices
                tr
                    td
                        span.cell= device.mac
                    td
                        span.cell= device.addr
                    td
                        span.cell= device.vendor
                    td
                        span.cell
                            a.btn.btn-success(href="/add-device?addr=" + device.address)= 'Add this device'
    else
        div.no-devices
            h3= 'No devices'
    </div>
    </div>
    </div>